<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Nombre CamapaÃ±a"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/city_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_campaign"
        android:layout_marginTop="5dp"
        android:text="Nombre"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/address_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_campaign"
        android:layout_marginTop="5dp"
        android:text="Direccion"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_campaign"
        android:layout_marginTop="5dp"
        android:text="Fecha Creada"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_info" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/create_date"
        android:layout_below="@+id/address_campaign"
        android:text="Fecha Inicio"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/start_date"
        android:layout_below="@+id/create_date"
        android:text="Fecha Fin"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/end_date"
        android:layout_below="@+id/create_date"
        android:text="Estado"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/status"
        android:layout_below="@+id/end_date"
        android:text="Programa"
        android:textColor="@android:color/black"/>

</RelativeLayout>