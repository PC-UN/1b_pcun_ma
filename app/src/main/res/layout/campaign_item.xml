<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="nombre"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/city_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_campaign"
        android:layout_marginTop="5dp"
        android:text="ciudad"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/address_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_campaign"
        android:layout_marginTop="5dp"
        android:text="direccion"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_campaign"
        android:layout_marginTop="5dp"
        android:text="fechaC"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/create_date"
        android:layout_below="@+id/address_campaign"
        android:text="fechaI"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/start_date"
        android:layout_below="@+id/create_date"
        android:text="fechaF"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/end_date"
        android:layout_below="@+id/create_date"
        android:text="sstado"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/status"
        android:layout_below="@+id/end_date"
        android:text="programa"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_info" />



</RelativeLayout>